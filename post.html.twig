                <span class="post-tag post-tag-quaternary category"><a href="{{ base_url }}/category{{ config.system.param_sep }}{{ category }}">{{ category }}</a></span>&nbsp;
                {% endfor %}
            {% if page.taxonomy.tag|length > 0 %}
                {% for tag in page.taxonomy.tag %}<span class="post-tag post-tag-quaternary tag"><a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a></span>&nbsp;
                {% endfor %}
            {% endif %}
             <div id="fb-button">
                <iframe scrolling="no" frameborder="0" style="border:none;overflow:hidden;width:450px;height:21px;" allowTransparency="false"></iframe>
            </div>
            <script>
            function getCookie(cname) {
                var name = cname + "=";
                var decodedCookie = decodeURIComponent(document.cookie);
                var ca = decodedCookie.split(';');
                for(var i = 0; i <ca.length; i++) {
                    var c = ca[i];
                    while (c.charAt(0) == ' ') {
                        c = c.substring(1);
                    }
                    if (c.indexOf(name) == 0) {
                        return c.substring(name.length, c.length);
                    }
                }
                return "";
            }
            if (getCookie("lkrdpg") != "") {
                    $('#fb-button > iframe').attr('src', 'https://www.facebook.com/plugins/like.php?href={{site.main_base_url|url_encode}}{{page.url|url_encode}}&send=false&layout=button_count&width=450&show_faces=false&action=like&colorscheme=light&font&height=21&confirm=false');
                } else {
                    $('#fb-button > iframe').attr('src', 'https://www.facebook.com/plugins/like.php?href={{site.social.facebook|url_encode}}&send=false&layout=button_count&width=450&show_faces=false&action=like&colorscheme=light&font&height=21&confirm=false');
            }
            </script>
            </section>
            <br />
            <div id="disqus_thread"></div>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
            <div class="HTML widget social-button-column"><span class="share-color" style="font-size: 14px;font-family: Oswald, monospace;font-weight: normal;text-transform: uppercase;">share</span><a class="social-button-column-vertical" href="https://www.facebook.com/sharer.php?u={{ site.main_base_url }}{{ page.url }}&t={{ page.title }}" target="_blank" role="button" rel="nofollow"><i class="fa fa-facebook-square facebook-icon-color" ></i></a><a class="social-button-column-vertical" href="http://twitter.com/share?text={{ page.header.primer }}&url={{ site.main_base_url }}{{ page.url }}" target="_blank" role="button" rel="nofollow"><i class="fa fa-twitter twitter-icon-color" ></i></a><a class="social-button-column-vertical" href="https://www.pinterest.com/pin/create/bookmarklet/?url={{ site.main_base_url }}{{ page.url }}" target="_blank" role="button" rel="nofollow"><i class="fa fa-pinterest pinterest-icon-color" ></i></a><a class="social-button-column-vertical" href="https://www.reddit.com/submit?url={{ site.main_base_url }}{{ page.url }}" target="_blank" role="button" rel="nofollow"><i class="fa fa-reddit reddit-icon-color" ></i></a></div>
        </section>
        {{ site.ad_unit.three }}
        <footer class="post-footer">
        </footer>
    </article>
    {% include 'partials/sidebar.html.twig' %}
</main>
<div class="related-bottom"></div>
{% endblock %}

