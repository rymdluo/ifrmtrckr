{% block content %}
{% include 'partials/header.html.twig' %}
<main class="content" role="main">    
    {{ site.ad_unit.one }}
    <article class="post">
        <header class="post-header">
            {% include 'partials/breadcrumbs.html.twig' %}
            <section class="post-meta">
            {% if page.taxonomy.type|length > 0 %}
                 <span class="post-tag post-tag-primary type"><a href="{{ base_url }}/type{{ config.system.param_sep }}{{ page.taxonomy.type|first }}">{{ page.taxonomy.type|first }}</a></span>
            {% endif %}
            {% if page.taxonomy.category|length > 0 %}
                {% if page.taxonomy.type|length > 0 %}&nbsp;/&nbsp;{% endif %}<span class="post-tag post-tag-secondary category"><a href="{{ base_url }}/category{{ config.system.param_sep }}{{ page.taxonomy.category|first }}">{{ page.taxonomy.category|first }}</a></span>
            {% endif %}
            {% if page.taxonomy.bridge|length > 0 %}
                {% if page.taxonomy.category|length > 0 %}&nbsp;/&nbsp;{% endif %}<span class="post-tag post-tag-quaternary bridge"><a href="{{ base_url }}/bridge{{ config.system.param_sep }}{{ page.taxonomy.bridge|first }}">{{ page.taxonomy.bridge|first }}</a></span>
            {% endif %}
            </section>
            <h1 class="post-title">{{page.title}}</h1>
            {% if page.header.primer %}
                <p class="primer">{{ page.header.primer }}</p>
            {% endif %}
            <section class="post-meta">
            {% if page.taxonomy.subject|length > 0 %}
                {% for subject in page.taxonomy.subject %}<span class="post-tag post-tag-teritary subject"><a href="{{ base_url }}/subject{{ config.system.param_sep }}{{ subject }}">{{ subject }}</a></span>{%if not loop.last %}/ {% endif %}{% endfor %}
