            {% if page.taxonomy.continent|length > 0 %}
                 {% if page.taxonomy.subject|length > 0 %}/ {% endif %}{% for continent in page.taxonomy.continent %}<span class="post-tag post-tag-quaternary continent"><a href="{{ base_url }}/continent{{ config.system.param_sep }}{{ continent }}">{{ continent }}</a></span>{% endfor %}
            {% endif %}
             {% if page.taxonomy.subject|length > 0 %}/ {% endif %}<time class="post-date" datetime="{{ page.date | date('j M Y') }}">{{ page.date | date("j M Y") }}</time>
            </section>
        </header>
